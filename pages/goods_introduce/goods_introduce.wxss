/* pages/goods_introduce/goods_introduce.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
  margin: 0 auto;
}

.intro_top {
  color: #666;
}

.intro_user {
  color: #666;
}

.user-logo {
  width:40px;
  height:40px;
}

.user-name {
  color: #666;
}

.intro_conter {
  color: #666;
}



.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
  box-shadow:0px 2px 5px 5px rgba(0,0,0,0.05);
}
.detail-nav image {
  width: 70rpx;
  height: 50rpx;
  margin: 20rpx 40rpx;
}
button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 85%;
  height: 100%;
  line-height: 100rpx;
}

.button-red {
  background-color: #3ED8C4; 
}
