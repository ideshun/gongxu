<view class="page">
 <form bindsubmit="formSubmit" >
  <view class="page__bd">
    <view class="weui-cells__title">请填写报名信息</view>
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" value='' name='username' placeholder="请输入您的姓名" />
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">公司</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name='company' placeholder="请输入您的公司名称" />
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">报名人数</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name='amount' placeholder="请输入您的公司名称" />
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">QQ</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name='qq' placeholder="请输入您的QQ号" />
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">微信</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name='wx' placeholder="请输入您的微信号" />
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">地址</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" name='address'  placeholder="请输入您的地址" />
        </view>
      </view>
<view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" type='text' name='mobile' placeholder="请输入您的手机号" />
        </view>
      </view>
  <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">留言</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" type='text' name='content' placeholder="请输入您的留言信息" />
        </view>
      </view>

