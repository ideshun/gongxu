<!--pages/activity/signUp/signUp.wxml-->
<view class="page">
  <view class="page__bd">
    <view class="weui-cells__title">请填写报名信息</view>
    <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">错误提示</view>

    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">姓名</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入您的姓名" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">公司</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入您的公司名称" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">职位</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入您的职位" />
        </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">手机号</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入您的手机号" />
        </view>
        <view class="weui-cell__ft">
          <view class="weui-vcode-btn">获取验证码</view>
        </view>
      </view>
      <view class="weui-cell weui-cell_input weui-cell_vcode">
        <view class="weui-cell__hd">
          <view class="weui-label">验证码</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" placeholder="请输入验证码" />
        </view>
        <view class="weui-cell__ft">
          <image class="weui-vcode-img" src="../images/vcode.jpg" style="width: 108px"></image>
        </view>
      </view>
    </view>
    <view class="weui-btn-area">
      <button class="weui-btn" type="" bindtap="showTopTips">确定</button>
    </view>
  </view>
</view>