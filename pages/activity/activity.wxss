/* 头像 */

.new-info {
  margin-top: 5px;
  margin-bottom: 10px;
}

.new-info-tile {
  font-size: 16px;
  font-weight: 600;
  line-height: 50rpx;
}

.new-info-img {
  width: 30%;
  margin-right: 3.3%;
  margin-top: 20rpx;
  border: 2rpx solid #f2f2f2;
}

.new-info-img:last-child {
  margin-right: 0;
}

.new-info-summary {
  line-height: 44rpx;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 3rpx;
}

.new-img {
  width: 30rpx;
  vertical-align: middle;
  margin-top: -3rpx;
}

.new-num {
  display: inline-block;
  font-size: 12px;
  color: #666;
  margin: 0 20rpx 0 6rpx;
}

.add-btn {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
}

.add-btn image {
  width: 100rpx;
  background: #FFF;
  border-radius: 50%;
  border: 5rpx solid #FFF;
}
