/* pages/personal/A-mySetting/A-mySetting.wxss */

page {
  background-color: #eee;
}

.container {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  width: 15rpx;
  height: 23rpx;
}

.list_set {
  padding: 0 25rpx;
  box-sizing: border-box;
  background-color: #fff;
  margin-top: 20rpx;
}

.list_set .set_in {
  padding: 0 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}

.list_set .set_in:last-child {
  border: none;
}

.clear {
  display: flex;
  align-items: center;
}

.clear_txt {
  color: #666;
  margin-right: 20rpx;
}

.login_out {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  margin-top: 40rpx;
  line-height: 90rpx;
  text-align: center;
  color: #f56c6c;
}

button {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  opacity: 0
}
