/* pages/personal/A-myFavour/A-myFavour.wxss */

.page_container {
  padding: 20rpx;
}

.fav-item {
  display: flex;
  padding: 10rpx 0 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid #f2f2f2;
}

.fav-img {
  width: 220rpx;
  height: 180rpx;
}

.fav-info {
  width: 450rpx;
  padding-left: 20rpx;
}

.fav-titele {
  font-size: 16px;
}

.fav-sum {
  color: gray;
  margin: 5rpx 0;
  height: 88rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  word-break: break-all;
}

.fav-num {
  font-size: 12px;
  color: gray;
}

.fav-num image {
  width: 30rpx;
  vertical-align: middle;
  margin-top: -3rpx;
}

.fav-num text {
  display: inline-block;
  margin: 0 20rpx 0 6rpx;
}
