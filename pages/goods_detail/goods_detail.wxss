/* pages/detail/detail.wxss */

page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

/* 直接设置swiper属性 */

swiper {
  height: 380rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.d_left {
  margin-left: 20rpx;
}

.detail {
  margin: 15rpx 20rpx;
}

.detail .title {
  font-size: 40rpx;
  color: black;
  text-align: justify;
  font-weight: bold;
}

.detail text {
  line-height: 50rpx;
}

.detail .price {
  color: red;
  font-size: 40rpx;
}

.detail .stock {
  float: right;
  font-size: 14px;
  color: gray;
}

/* 购买数量
 */

.pay-num {
  display: inline-block;
  width: 50rpx;
  min-height: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  border: 2rpx solid #666;
  vertical-align: middle;
  margin: 0 5rpx;
  padding: 0 10rpx;
  font-size: 14px;
  text-align: center；;
}

.pay-icon {
  font-weight: bold;
}

.separate {
  line-height: 50rpx;
  margin-bottom: 20rpx;
}

/* 商品详情 */

.pro-info {
  border-top: 15rpx solid #f2f2f2;
  padding: 10rpx 20rpx 110rpx;
}

.pro-info-bar {
  font-size: 18px;
  font-weight: bold;
  margin: 10rpx 0;
}

.line_flag {
  width: 80rpx;
  height: 1rpx;
  display: inline-block;
  margin: 20rpx auto;
  background-color: gainsboro;
  text-align: center;
}

.line {
  width: 100%;
  height: 2rpx;
  display: inline-block;
  margin: 20rpx 0rpx;
  background-color: gainsboro;
  text-align: center;
}

.detail-nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  float: left;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  right: 0;
  z-index: 1;
  width: 100%;
  height: 100rpx;
  border: 2rpx solid gainsboro;
}
.detail-nav image{
  width: 80rpx;
  height: 50rpx;
  margin: 0 30rpx;
}
.button-green {
  background-color: #1fd3ae; /* Green */
}

.button-red {
  background-color: #072c3b; /* 红色 */
}

.image_detail {
  width: 100%;
}

button {
  color: white;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 30rpx;
  border-radius: 0rpx;
  width: 50%;
  height: 100%;
  line-height: 100rpx;
}


.line_nav {
  width: 2rpx;
  height: 100%;
  background-color: gainsboro;
}

/* 占位 */

.temp {
  height: 100rpx;
}

.text-remark {
  display: block;
  font-size: 25rpx;
  margin: 20rpx;
}
